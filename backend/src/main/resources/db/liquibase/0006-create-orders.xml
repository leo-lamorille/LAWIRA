<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <changeSet id="create orders" author="HeavyNimbus">
        <createTable tableName="order">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" primaryKeyName="ORDER_ID_PK"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false" notNullConstraintName="ORDER_QUANTITY_NOT_NULL"/>
            </column>
            <column name="account_id" type="UUID">
                <constraints references="account(id)" foreignKeyName="ORDER_ACCOUNT_ID_FK"/>
            </column>
        </createTable>
        <createTable tableName="order_attribute_options">
            <column name="order_id" type="UUID">
                <constraints references="order(id)" foreignKeyName="ORDER_ATTRIBUTE_OPTIONS_ORDER_ID_FK"/>
            </column>
            <column name="attribute_option_id" type="UUID">
                <constraints references="attribute_option(id)"
                             foreignKeyName="ORDER_ATTRIBUTE_OPTIONS_ATTRIBUTE_OPTION_ID_FK"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>